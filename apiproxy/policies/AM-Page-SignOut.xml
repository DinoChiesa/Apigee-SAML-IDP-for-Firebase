<AssignMessage name='AM-Page-SignOut'>
  <AssignVariable>
    <Name>page-html-tmpl</Name>
    <ResourceURL>jsc://signout-page.html.txt</ResourceURL>
  </AssignVariable>

  <!-- resolve variable references in the HTML -->
  <AssignVariable>
    <Name>page-html</Name>
    <Template ref='page-html-tmpl'/>
  </AssignVariable>

  <Set>
    <Payload contentType='text/html'>{page-html}</Payload>
  </Set>
</AssignMessage>
